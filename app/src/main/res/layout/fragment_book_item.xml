<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">


        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/book_marinLeft"
                android:layout_marginStart="@dimen/book_marinLeft"
                android:text="电影名字是否石帆胜丰沙发上的首发式发生"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/book_director_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/book_marinLeft"
                android:layout_marginStart="@dimen/book_marinLeft"
                android:layout_marginTop="@dimen/book_marinTop"
                android:maxLines="1"
                android:text="导演："
                android:textSize="@dimen/book_textsize" />

            <TextView
                android:id="@+id/book_genres_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/book_marinLeft"
                android:layout_marginStart="@dimen/book_marinLeft"
                android:layout_marginTop="@dimen/book_marinTop"
                android:maxLines="1"
                android:text="类型："
                android:textSize="@dimen/book_textsize" />

            <TextView
                android:id="@+id/book_actor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/book_marinLeft"
                android:layout_marginStart="@dimen/book_marinLeft"
                android:layout_marginTop="@dimen/book_marinTop"
                android:maxLines="2"
                android:text="主演："
                android:textSize="@dimen/book_textsize" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>